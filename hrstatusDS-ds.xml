<datasources>
   <local-tx-datasource>

      <jndi-name>hrStatusDS</jndi-name>

      <connection-url>jdbc:mysql://ip:porta/hrstatus</connection-url>
      <connection-property name="autoReconnect">true</connection-property>

      <driver-class>com.mysql.jdbc.Driver</driver-class>

      <!--security-domain>logreaderDomain</security-domain-->
        <user-name>data base user</user-name>
        <password>data base password</password>

      <min-pool-size>5</min-pool-size>
      <max-pool-size>20</max-pool-size>

      <idle-timeout-minutes>0</idle-timeout-minutes>

      <metadata>
         <type-mapping>mySQL</type-mapping>
      </metadata>

     
   </local-tx-datasource>

</datasources>
